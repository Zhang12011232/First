<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.shunanzhang.dao.PersonDao">

    <select id="queryPersonInfoById" parameterType="Long" resultType="PersonInfo">
        select * from tb_person_info where person_id=#{personId}
    </select>

    <insert id="insertPersonInfo" parameterType="PersonInfo" useGeneratedKeys="true"
            keyProperty="personId" keyColumn="person_id">
           insert into tb_person_info(person_name,pass_word,gender,phone,e_mail,create_time,last_edit_time)
        values(#{personName},#{passWord},#{gender},#{phone},#{eMail},#{createTime},#{lastEditTime})
     </insert>
    <update id="updatePersonInfo" parameterType="PersonInfo">
        update tb_person_info
        <set>
            <if test="personName != null">person_name=#{personName},</if>
            <if test="passWord != null">pass_word=#{passWord},</if>
            <if test="gender != null">gender=#{gender},</if>
            <if test="phone != null">phone=#{phone},</if>
            <if test="eMail != null">e_mail=#{eMail},</if>
            <if test="lastEditTime != null">last_edit_time=#{lastEditTime},</if>
        </set>
        where person_id=#{personId}
    </update>

    <delete id="deletePersonInfo">
        DELETE FROM
        tb_person_info
        WHERE
        person_id =
        #{personId}
    </delete>

    <select id="getPersonInfoList" resultType="PersonInfo">
        select * from tb_person_info
        <where>
            <if test="personCondition.gender!=null">
                and gender=#{personCondition.gender}
            </if>
            <if test="personCondition.createTime!=null">
                and DATE_FORMAT(create_time, '%Y-%m-%d')>= DATE_FORMAT(#{personCondition.createTime}, '%Y-%m-%d')
                <!--<![CDATA[   and DATE_FORMAT(create_time, '%Y-%m-%d')>=  DATE_FORMAT(#{personCondition.createTime}, '%Y-%m-%d')   ]]>-->
            </if>
            <if test="personCondition.PersonName!=null">
                and person_name like '%${personCondition.PersonName}%'
            </if>

        </where>
        LIMIT #{rowIndex},#{pageSize};
    </select>
</mapper>